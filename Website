<script>
    // Chaplet Prices Toggle
    function showChapletImage() {
        const priceImageChaplet = document.getElementById('chaplet-price-image');
        priceImageChaplet.classList.toggle('hidden'); // Toggle the hidden class
    }

    // Lawn Lots Prices Toggle
    function showLawnLotsImage() {
        const priceImageLawnLots = document.getElementById('lawn-lots-price-image');
        priceImageLawnLots.classList.toggle('hidden'); // Toggle the hidden class
    }
</script>

